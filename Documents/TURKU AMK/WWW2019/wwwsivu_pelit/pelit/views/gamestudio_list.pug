extends layout

block content
  h1= title
  
  ul
    each gamestudio in gamestudio_list
      li 
        a(href=gamestudio.url) #{gamestudio.name} 
        |  (#{gamestudio.date_of_birth} - #{gamestudio.date_of_death})

    else
      li There are no Gamestudios.
  ul(class='add')   
    a(href='/catalog/gamestudio/create') Add new Gamestudio 
  
block footer
  img(class="displayed" src="https://en.cdprojektred.com/wp-content/themes/evp-cdpr/img/cdpr-default.jpg", alt="poster is not here yet!")
  